<script langusge="javascript" >
	//初始化服务类目
	$(document).ready(function(){
    	jQuery.ajax( {
    		url : "/services/getLevel",
    		type : "post",
    		dataType : "json",
    		data : "level=1",
    		success : function(data) {
    			if (data.msg == "success") {
    				$("#parentCategoryId").empty(); // 清空服务类目选项
    				//$("<option value='0'>全部</option>").appendTo("#parentCategoryId");
    				var categoryList = data.categoryList;

    				for ( var i = 0; i < categoryList.length; i++) {
    					var category = categoryList[i];

    					$("<option value='" + category.categoryId + "'>" 
    							+ category.categoryName + "</option>").appendTo("#parentCategoryId");

    				}
    			} else {
    				alert("无一级服务类目！");
    			}
    		},
    		error : function() {
    			alert("系统超时！");
    		}
    		});
	
	});
	
    //添加二级服务类目
    $("#addCatalog2").click(function() {
    	var categoryName=$("#categoryName").val();
    	if(categoryName.length==0){
    		alert("服务类目名称不能为空！");
    		return;
    	}
    	var sortNumber=$("#sortNumber").val();
    	if(sortNumber.length==0){
    		alert("服务类目排序不能为空！");
    		return;
    	}
    	var txNum = /^[0-9]+$/;
    	if (!txNum.test(sortNumber)) {
			alert("服务类目排序应该为数字！");
			return;
		}
    	$("#f1").attr("action", "/services/addCategory2");
    	$("#f1").attr("method", "post");
    	$("#f1").submit();
    });
	
	//查询二级服务类目
    $("#queryCatalog2").click(function() {
    	$("#f2").attr("action", "/services/category2nd");
    	$("#f2").attr("method", "post");
    	$("#f2").submit();
    });

    //删除服务类目
    function deleteCategory2(obj){
    	var categoryId = obj.id;
    	// 根据ID 上架
    	if(confirm("确定要删除服务类目？")){
    		$.ajax( {
    			url : "/services/deleteCategory2",
    			type : "post",
    			dataType : "json",
    			data : "categoryId="+categoryId,
    			success : function(data) {
    				if (data.msg == "success") {
    					//删除成功
    					alert("删除服务类目成功！");
    					$(obj).parent().parent().remove();
    				} else {
    					alert("系统异常，删除失败！");
    				}
    			},
    			errot : function() {
    				alert("系统超时，删除失败！");
    			}
    		});
    	}
    }
        
</script>
