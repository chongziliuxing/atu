<script langusge="javascript" >
	
    //添加一级分类
    $("#addCatalog1").click(function() {
    	var categoryName=$("#categoryName").val();
    	if(categoryName.length==0){
    		alert("分类名称不能为空！");
    		return;
    	}
    	var sortNumber=$("#sortNumber").val();
    	if(sortNumber.length==0){
    		alert("分类排序不能为空！");
    		return;
    	}
    	var txNum = /^[0-9]+$/;
    	if (!txNum.test(sortNumber)) {
			alert("分类排序应该为数字！");
			return;
		}
    	$("#f1").attr("action", "/category/addCategory1");
    	$("#f1").attr("method", "post");
    	$("#f1").submit();
    });
	
	//添加一级分类
    $("#queryCatalog1").click(function() {
    	$("#f2").attr("action", "/category/category1");
    	$("#f2").attr("method", "post");
    	$("#f2").submit();
    });

  //删除分类
    function deleteCategory1(obj){
    	var categoryId = obj.id;
    	// 根据商品ID 上架商品
    	if(confirm("确定要删除一级分类？")){
    		$.ajax( {
    			url : "/category/deleteCategory1",
    			type : "post",
    			dataType : "json",
    			data : "categoryId="+categoryId,
    			success : function(data) {
    				if (data.msg == "success") {
    					//删除成功
    					alert("删除分类成功！");
    					$(obj).parent().parent().remove();
    				} else {
    					alert("系统异常，删除失败！");
    				}
    			},
    			errot : function() {
    				alert("系统超时，删除失败！");
    			}
    		});
    	}
    }
        
</script>
